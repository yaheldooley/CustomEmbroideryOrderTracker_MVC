@model PurchaseOrder

<table style="width:100%">
    <tr>
        <th>ID:</th>
        <td>@Model.ID</td>
    </tr>
    <tr>
        <th>Date Created:</th>
        <td>@Model.DateEntered</td>
    </tr>
    <tr>
        <th>Date Due:</th>
        <td>@Model.DateDue</td>
    </tr>
    <tr>
        <th></th>
        <td></td>
    </tr>
    

</table>
<table>
    <tr>
        <th><b>SHIP TO</b></th>
        <td></td>
    </tr>
    <tr>
        <th>Name:</th>
        <td>@Model.ShippingInfo.FullName</td>
    </tr>
    <tr>
        <th>Address:</th>
        <td>@Model.ShippingInfo.AddressOne</td>
    </tr>
    <tr>
        <th>Suite/Apt:</th>
        <td>@Model.ShippingInfo.AddressTwo</td>
    </tr>
    <tr>
        <th>City/State:</th>
        <td>@Model.ShippingInfo.City, @Model.ShippingInfo.State @Model.ShippingInfo.ZipCode</td>
    </tr>
</table>
<table>
    <tr>
        <th><b>CARRIER</b></th>
        <td></td>
    </tr>
    <tr>
        <th>Carrier:</th>
        <td>@Model.CarrierInfo.Carrier</td>
    </tr>
    <tr>
        <th>Tracking#:</th>
        <td>@Model.CarrierInfo.TrackingNumber</td>
    </tr>
    <tr>
        <th>Shipped:</th>
        <td>@Model.CarrierInfo.Shipped</td>
    </tr>
</table>
