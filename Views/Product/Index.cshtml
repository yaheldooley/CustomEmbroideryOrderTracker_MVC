@model IEnumerable<Product>

<h3 class="tableLabel">Products</h3>

<table>
    <tr>
        <th></th>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Color</th>
        <th>Size</th>
        <th>Article</th>
        <th>In Stock</th>
        <th><a href=/Product/InsertProduct />NEW</a></th>
    </tr>

    @foreach (var product in @Model)
    {
        <tr class="outline">
            <td><a href=/Product/ViewProduct/@product.ProductID>VIEW</a></td>
            <td>@product.ProductID</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.ColorName</td>
            <td>@product.SizeName</td>
            <td>@product.ArticleName</td>
            <td>@product.StockLevel</td>
            <td></td>
        </tr>
    }

</table>